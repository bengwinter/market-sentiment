<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class='error_messages'>
      <h2>Form is invalid</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      <ul>
    </div>
  <% end %>

  <%= f.label :email %>
  <%= f.text_field :email %><br/>
  <%= f.label :phone_number %>
  <%= f.text_field :phone_number %><br/>
  <%= f.submit "Update" %>
<% end %> 


<br/><br/>
<%= link_to "Delete account", delete_user_path %>

