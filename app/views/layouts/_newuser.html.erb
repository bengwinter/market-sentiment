<% if !current_user %>
	<div class="signup">
	<div class="section">
	<div class="headerspace"></div>
	<div class="headerspace"></div>
	<h3>Subscribe for daily text message updates</h3>
	<div class="line-separator"></div>

	<%= form_for @user do |f| %>
	  <% if @user.errors.any? %>
	    <div class='error_messages'>
	      <h2>Form is invalid</h2>
	      <ul>
	        <% @user.errors.full_messages.each do |message| %>
	          <li><%= message %></li>
	        <% end %>
	      </ul>
	  <% end %>

	  <%= f.text_field :phone_number, placeholder: '617-544-3963' %>
	  <%= f.password_field :password, placeholder: 'password' %>
	  <%= f.submit "subscribe" %>
	  </div>
	</div>
	<% end %> 
<% end %>