<!DOCTYPE html>
<html>
<head>
  <title>MarketSentimentAnalysis</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% flash.each do |name, msg| %>
	<%= 
	content_tag :div, msg, :id => "flash#{name}" 
	%>
<% end %>

<div id="user_nav">
  <% if current_user %>
    Logged in as <%= current_user.phone_number %>
    <%= link_to "Log out", log_out_path %>
    <%= link_to "Unsubscribe", delete_user_path %>
  <% else %>

    <%= form_tag sessions_path do %> 
      <p>
        <%= label_tag :phone_number %>
        <%= text_field_tag :phone_number, params[:phone_number] %>
       <%= label_tag :password %>
       <%= password_field_tag :password %>
        <%= label_tag :remember_me %>
        <%= check_box_tag :remember_me, 1, params[:remember_me] %>
      <%= submit_tag "Log In" %> </p>
    <% end %> 

  <%= link_to "Forgot Password", forgot_password_path %>

<% end %>

</div>
<br/>
<%= yield %>

</body>
</html>
